# Postgres â€” must match docker-compose.yml
POSTGRES_USER=fixtrade
POSTGRES_PASSWORD=fixtrade
POSTGRES_HOST=localhost
POSTGRES_DB=fixtrade
POSTGRES_PORT=5432

# Scraping pipeline DSN (host = localhost when running from host)
SCRAPING_POSTGRES_DSN=postgresql://fixtrade:fixtrade@localhost:5432/fixtrade

# --- LLM / AI Configuration ---
# OpenRouter API (free tier available at https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Default LLM provider (openrouter, openai, anthropic, groq)
DEFAULT_LLM_PROVIDER=openrouter

# Default model (claude-3.5-sonnet, gpt-4, etc.)
DEFAULT_LLM_MODEL=anthropic/claude-3.5-sonnet

# LLM temperature (0.0-1.0, lower = more deterministic)
DEFAULT_LLM_TEMPERATURE=0.7

# Max tokens for LLM responses
DEFAULT_LLM_MAX_TOKENS=500

# Enable reasoning mode (true/false) - adds step-by-step thinking
DEFAULT_LLM_REASONING=true
